<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".set_ops_activity">

    <Button
        android:id="@+id/diff_btn"
        android:layout_width="220dp"
        android:layout_height="49dp"
        android:backgroundTint="@color/white"
        android:onClick="calcDifference"
        android:shadowColor="@color/black"
        android:text="Difference"
        android:textSize="18dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inter_btn"
        app:layout_constraintVertical_bias="0.329" />

    <Button
        android:id="@+id/inter_btn"
        android:layout_width="220dp"
        android:layout_height="49dp"
        android:backgroundTint="@color/white"
        android:onClick="calcIntersection"
        android:shadowColor="@color/black"
        android:text="Intersection"
        android:textSize="18dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/union_btn"
        app:layout_constraintVertical_bias="0.167" />

    <EditText
        android:id="@+id/setB_etxt"
        android:layout_width="297dp"
        android:layout_height="55dp"
        android:background="#FAF0D8"
        android:ems="10"
        android:gravity="center"
        android:hint="Format : x y z"
        android:textColor="#000000"
        android:textColorHint="#5A5B5E"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.038" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="144dp"
        android:layout_height="49dp"
        android:gravity="center"
        android:text="Set B"
        android:textColor="#000000"
        android:textSize="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setA_etxt"
        app:layout_constraintVertical_bias="0.079" />

    <EditText
        android:id="@+id/setA_etxt"
        android:layout_width="297dp"
        android:layout_height="55dp"
        android:background="#FAF0D8"
        android:ems="10"
        android:gravity="center"
        android:hint="Format : a b c"
        android:textColor="#000000"
        android:textColorHint="#5A5B5E"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.024" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="144dp"
        android:layout_height="49dp"
        android:gravity="center"
        android:text="Set A"
        android:textColor="#000000"
        android:textSize="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/res_txt_view"
        android:layout_width="351dp"
        android:layout_height="87dp"
        android:background="#ECE5FD"
        android:gravity="center"
        android:text="Result"
        android:textColor="#000000"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setB_etxt"
        app:layout_constraintVertical_bias="0.122" />

    <Button
        android:id="@+id/union_btn"
        android:layout_width="220dp"
        android:layout_height="49dp"
        android:backgroundTint="@color/white"
        android:onClick="calcUnion"
        android:shadowColor="@color/black"
        android:text="Union"
        android:textSize="18dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/res_txt_view"
        app:layout_constraintVertical_bias="0.173" />
</android.support.constraint.ConstraintLayout>